# Environment Variables Template
# Copy this file to .env and fill in your values

# ============================================
# OPTIONAL: Redis Cache Configuration
# ============================================
# Set to 'true' to enable Redis caching (recommended for production)
USE_REDIS_CACHE=false

# Redis connection URL (required if USE_REDIS_CACHE=true)
# Example: redis://default:password@host:port
# REDIS_URL=

# ============================================
# OPTIONAL: Google Analytics
# ============================================
# GA4 Measurement ID (format: G-XXXXXXXXXX)
# GA_MEASUREMENT_ID=

# GA4 API Secret (get from Google Analytics)
# GA_API_SECRET=

# ============================================
# OPTIONAL: Provider Configuration
# ============================================
# Disable specific providers by setting to 'false'
# All providers are enabled by default

# ENABLE_VIDZEE_PROVIDER=true
# ENABLE_MP4HYDRA_PROVIDER=true
# ENABLE_UHDMOVIES_PROVIDER=true
# ENABLE_MOVIESMOD_PROVIDER=true
# ENABLE_TOPMOVIES_PROVIDER=true
# ENABLE_VIDSRC_PROVIDER=true
# ENABLE_VIXSRC_PROVIDER=true
# ENABLE_SOAPERTV_PROVIDER=true
# ENABLE_MOVIESDRIVE_PROVIDER=true
# ENABLE_4KHDHUB_PROVIDER=true
# ENABLE_MOVIEBOX_PROVIDER=true
# ENABLE_NETMIRROR_PROVIDER=true
# ENABLE_CASTLE_PROVIDER=true
# ENABLE_STREAMFLIX_PROVIDER=true
# ENABLE_DAHMERMOVIES_PROVIDER=true
# ENABLE_VIDLINK_PROVIDER=true
# ENABLE_VIDLINK_PROVIDER=true
# ENABLE_VIDEASY_PROVIDER=true
# ENABLE_XDMOVIES_PROVIDER=true

# ============================================
# OPTIONAL: Cache Configuration
# ============================================
# Disable stream caching (not recommended)
# DISABLE_STREAM_CACHE=false

# Disable URL validation for providers
# DISABLE_URL_VALIDATION=false

# ============================================
# OPTIONAL: External Provider Services
# ============================================
# Use external provider services instead of local implementations
# USE_EXTERNAL_PROVIDERS=false

# External provider URLs (if USE_EXTERNAL_PROVIDERS=true)
# EXTERNAL_UHDMOVIES_URL=
# EXTERNAL_TOPMOVIES_URL=
# EXTERNAL_MOVIESMOD_URL=

# ============================================
# OPTIONAL: Proxy Configuration
# ============================================
# DramaDrip proxy URL for bypassing restrictions
# DRAMADRIP_PROXY_URL=

# ============================================
# OPTIONAL: API Keys
# ============================================
# MovieBox primary key (required for MovieBox provider)
# MOVIEBOX_PRIMARY_KEY=

# ScraperAPI key for bypassing restrictions
# SCRAPER_API_KEY=

# ============================================
# Server Configuration
# ============================================
# Port for local development (Vercel will override this)
PORT=7000